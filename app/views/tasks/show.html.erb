<%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-primary" %>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is completed" : "This task is not yet completed" %></p>

<%= link_to "Delete",task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>

<%= render "shared/back", class: "btn btn-primary"%>
